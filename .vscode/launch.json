    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger Main with Arguments",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/main.py",
            "args": ["--launch_config_path",  "configs\\launch_configs\\launch_config.yml", ]
        },
        {
            "name": "Views creation",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/main.py",
            "args": ["--launch_config_path",  "configs\\launch_configs\\launch_config_views.yml", ]
        }
    ]
}